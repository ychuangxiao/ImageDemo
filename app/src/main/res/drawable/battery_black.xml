<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 空的电池 -->
    <item>
        <bitmap android:src="@mipmap/ic_battery_black_empty"/>
    </item>
    <!-- 裁剪满的电池图标 -->
    <item android:id="@+id/clipDrawable">
        <clip
            android:clipOrientation="horizontal"
            android:drawable="@mipmap/ic_battery_black_full"
            android:gravity="left"/>
    </item>

</layer-list>