<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the main color -->
    <item>
        <shape>
            <solid android:color="@color/colorHandle" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270.0"
                android:endColor="@color/colorUnHandleLine"
                android:centerColor="@color/colorUnHandleLine"
                android:startColor="@color/colorUnHandleLine"

                />

            <corners
                android:radius="0.0dip"
                />
        </shape>
    </item>

    <!-- This is the line -->
    <item android:bottom="0.5dp">
        <shape>
            <stroke
                android:width="0.0px"
                />

            <gradient
                android:angle="270.0"
                android:endColor="#ffffff"
                android:centerColor="#ffffff"
                android:startColor="#ffffff"
                />

            <corners

                android:radius="0.0dip"
                />
        </shape>
    </item>
</layer-list>

