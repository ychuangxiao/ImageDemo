<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
       android:insetBottom="0.0px"
       android:insetLeft="0.0px"
       android:insetRight="0.0px"
       android:insetTop="0.0px">

    <selector>
        <item android:state_pressed="true">
            <shape>
                <stroke
                    android:width="0px"
                    android:color="@color/md_grey_500"/>
                <gradient
                    android:angle="270.0"

                    android:centerColor="@color/md_grey_400"
                    android:endColor="@color/md_grey_400"
                    android:startColor="@color/md_grey_400"

                    ></gradient>
                <corners
                    android:radius="0dp"
                    />
            </shape>
        </item>
        <item>
            <shape>
                <stroke
                    android:width="0px"
                    android:color="@color/md_grey_400"/>

                <gradient
                    android:angle="270.0"

                    android:endColor="@color/md_grey_200"
                    android:startColor="@color/md_grey_200"/>

                <corners
                    android:radius="0dp"
                    />
            </shape>
        </item>
    </selector>

</inset>