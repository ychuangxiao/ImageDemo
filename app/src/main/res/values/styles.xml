<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Google.TextView.Left" parent="TextView">
        <item name="android:textSize">@dimen/google_font_size</item>
        <item name="android:textColor">@color/colorLeftTitle</item>
    </style>

    <style name="Google.TextView.Right" parent="TextView">
        <item name="android:textSize">@dimen/google_font_size</item>
        <item name="android:textColor">@color/colorRightTitle</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text|textNoSuggestions</item>
    </style>

    <style name="TextView.White.Large" parent="TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/top_title_font_size</item>

    </style>

    <style name="PaymentLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="PaymentLineCircle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>



    <style name="LeftTitle">
        <item name="android:layout_width">@dimen/widthLeftTitle</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/google_font_size</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:duplicateParentState">false</item>
        <item name="android:clickable">true</item>

        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="RightTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/google_font_size</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:duplicateParentState">false</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
