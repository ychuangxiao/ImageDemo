<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.banditcat.app.views.fragment.WeChatMeFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWeChatBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/bg_item_selected"
                    android:drawableLeft="@mipmap/ic_circles_of_friends"
                    android:drawablePadding="12.0dip"
                    android:gravity="center|left"
                    android:paddingBottom="8.0dip"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="18.0dip"
                    android:paddingTop="8.0dip"
                    android:text="朋友圈"
                    android:textSize="@dimen/font_size_16"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:background="@drawable/bg_item_selected"
                    android:drawableLeft="@mipmap/ic_me_money"
                    android:drawablePadding="12.0dip"
                    android:gravity="center|left"
                    android:paddingBottom="8.0dip"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="18.0dip"
                    android:paddingTop="8.0dip"
                    android:text="钱包"
                    android:textSize="@dimen/font_size_16"
                    />

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_below="@+id/tvMoney"
                    android:layout_marginLeft="14.0dip"
                    android:layout_marginRight="14.0dip"
                    android:background="#ffd9d9d9"

                    />


                <android.support.v7.widget.AppCompatTextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/line2"
                    android:background="@drawable/bg_item_selected"
                    android:drawableLeft="@mipmap/ic_me_card"
                    android:drawablePadding="12.0dip"
                    android:gravity="center|left"
                    android:paddingBottom="8.0dip"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="18.0dip"
                    android:paddingTop="8.0dip"
                    android:text="优惠券"
                    android:textSize="@dimen/font_size_16"
                    />
            </RelativeLayout>


            <android.support.v7.widget.AppCompatTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20.0dip"
                android:background="@drawable/bg_item_selected"
                android:drawableLeft="@mipmap/ic_me_smail"
                android:drawablePadding="12.0dip"
                android:gravity="center|left"
                android:paddingBottom="8.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="18.0dip"
                android:paddingTop="8.0dip"
                android:text="表情"
                android:textSize="@dimen/font_size_16"
                />


            <android.support.v7.widget.AppCompatTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20.0dip"
                android:background="@drawable/bg_item_selected"
                android:drawableLeft="@mipmap/ic_me_setting"
                android:drawablePadding="12.0dip"
                android:gravity="center|left"
                android:paddingBottom="8.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="18.0dip"
                android:paddingTop="8.0dip"
                android:text="设置"
                android:textSize="@dimen/font_size_16"
                />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
