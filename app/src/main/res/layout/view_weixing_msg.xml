<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/topConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:background="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_wifi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/signal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/signal"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_signal_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/batery"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/batery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:src="@mipmap/stat_sys_battery_charge_anim15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dateTime"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="21:52"
            android:textStyle="bold"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout

        android:id="@+id/toolConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="#464444"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topConstraintLayout">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:src="@mipmap/ali_chat_back_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="似水流年"
            android:textColor="#ffffff"
            android:textSize="20dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/rightNavUser"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/msgConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolConstraintLayout">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/leftFace"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_face_1"/>
        <android.support.v7.widget.AppCompatTextView
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingLeft="37dp"
            android:paddingBottom="10dp"
            android:background="@drawable/ic_message_left_default"
            android:text="你是哪个是打了款你是哪个是打了款\n你是哪个是打了款你是哪个是打了款\n你是哪个是打了款你是哪个是打了款"

            app:layout_constraintLeft_toRightOf="@+id/leftFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <android.support.v7.widget.AppCompatTextView
            app:layout_constraintTop_toBottomOf="@+id/leftFace"


            app:layout_constraintRight_toLeftOf="@+id/rightFace"
            android:background="@drawable/ic_message_right_default"
            android:text="你是哪个是打了款你是哪个是打了款\n你是哪个是打了款你是哪个是打了款\n你是哪个是打了款你是哪个是打了款"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toRightOf="@+id/leftFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatImageView
           app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftFace"
            android:id="@+id/rightFace"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/ic_face_2"/>
        <android.support.v7.widget.AppCompatImageView
            app:layout_constraintTop_toBottomOf="@+id/rightFace"
            android:id="@+id/leftFace2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/ic_face_1"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="25dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingLeft="37dp"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@+id/rightFace"
            android:background="@drawable/ic_message_left_default"
            android:text="你是哪个是打了款你是哪个是打了款\n你是哪个是打了款你是哪个是打了款\n你是哪个是打了款你是哪个是打了款"

            app:layout_constraintLeft_toRightOf="@+id/leftFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <android.support.v7.widget.AppCompatTextView
            app:layout_constraintTop_toBottomOf="@+id/leftFace2"


            app:layout_constraintRight_toLeftOf="@+id/rightFace"
            android:background="@drawable/ic_message_right_default"
            android:text="你是哪个是打了款你是哪个是打了款\n你是哪个是打了款你是哪个是打了款\n你是哪个是打了款你是哪个是打了款"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toRightOf="@+id/leftFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatImageView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftFace2"
            android:id="@+id/rightFace2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/ic_face_2"/>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>