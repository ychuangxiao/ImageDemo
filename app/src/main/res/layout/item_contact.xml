<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/avatarConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="60.0dip"
    android:minHeight="60.0dip"
    android:clickable="true"
    android:background="@drawable/bg_item_selected">


    <android.support.v7.widget.AppCompatImageView
        android:clickable="false"
        android:layout_centerVertical="true"
        android:id="@+id/avatarImage"
        android:layout_width="38.0dip"
        android:layout_height="38.0dip"
        android:layout_marginLeft="16.0dip"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_banditcats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <android.support.v7.widget.AppCompatTextView
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/avatarImage"
        android:layout_alignParentRight="true"
        android:id="@+id/tvUserNick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="@dimen/margin_tiny"
        android:maxLines="2"
        android:text="微信客服微信客服微信客服微信客服微信客服微信客服微信客服微信客服微信客服微信客服TextViewTextView"
        android:textColor="#ff353535"
        android:ellipsize="end"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/avatarImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="0.100000024dip"
        android:background="#ffdadada"
    />
</RelativeLayout>